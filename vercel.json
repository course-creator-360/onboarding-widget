{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install && npx prisma generate",
  "outputDirectory": "dist",
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/oauth/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/install",
      "dest": "/api/index.ts"
    },
    {
      "src": "/widget.js",
      "dest": "/dist/public/widget.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/dist/public/$1"
    },
    {
      "src": "/",
      "dest": "/dist/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "engines": {
    "node": "18.x"
  }
}

