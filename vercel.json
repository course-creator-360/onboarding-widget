{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install && npx prisma generate",
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@4.0.0",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/oauth/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/install",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

