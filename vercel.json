{
  "version": 2,
  "installCommand": "npm install && npx prisma generate",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/oauth/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/install",
      "dest": "/api/index.ts"
    },
    {
      "src": "/widget.js",
      "dest": "/public/widget.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

